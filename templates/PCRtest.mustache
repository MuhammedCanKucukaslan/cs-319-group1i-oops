<div class="component">
    <p class="title">Past & Upcoming PCR Tests</p>
    <table class="table is-bordered is-striped is-narrow is-hoverable">
        <tr>
            <th>Date</th>
            <th>Result</th>
        </tr>
        {{#upcomingTest}}
            <tr>
                <td>{{date}}</td>
                <td>
                    <form method="post">
                        <input type="submit" class="button is-warning" value="Cancel" name="remove-{{date}}">
                    </form>
                </td>
            </tr>
        {{/upcomingTest}}
        {{#pastTest}}
            <tr>
                <td>{{date}}</td>
                <td>{{result}}</td>
            </tr>
        {{/pastTest}}
    </table>


    <div class="table">
        <a class="button is-primary" href="/pcrtest">Schedule PCRTest</a>
    </div>

</div>