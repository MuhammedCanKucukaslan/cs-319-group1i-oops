<section class="hero is-info">
    <div class="hero-body">
        <div class="columns is-centered">
            <div class="column is-narrow">
                <h2><b>Reserve & Cancel Sports Hall Reservation</b></h2>
                <table class="table is-bordered is-striped is-narrow is-hoverable">
                    <tr>
                        <th>Place</th>
                        <th>Day Slot</th>
                        <th>Time Slot</th>
                        <th>Reserve/Cancel</th>
                    </tr>
                    {{#enrolledevent}}
                        <tr>
                            <td>{{place}}</td>
                            <td>{{dayslot}}</td>
                            <td>{{timeslot}}</td>
                            <td><input type="submit" class="button is-warning" value="Leave"></td>
                        </tr>
                    {{/enrolledevent}}
                    {{#notenrolledevent}}
                        <tr>
                            <td>{{place}}</td>
                            <td>{{dayslot}}</td>
                            <td>{{timeslot}}</td>
                            <td><input type="submit" class="button is-success" value="Enroll"></td>
                        </tr>
                    {{/notenrolledevent}}
                </table>
            </div>
        </div>
    </div>
</section>