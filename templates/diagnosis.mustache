<div class="component is-info">
    <p class="title">Past Diagnosis</p>
    <div class="table is-bordered is-striped is-narrow is-hoverable">
        <table>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Result</th>

            </tr>
            {{#diagnosis}}
                <tr>
                    <td>{{date}}</td>
                    <td>{{type}}</td>
                    <td>{{result}}</td>

                </tr>
            {{/diagnosis}}
        </table>
    </div>
    <div class="table">


        <form method="post" enctype="multipart/form-data">
            <div class="block"></div>


            <label>Add New Diagnosis Information with PDF:</label>

            <br>

            <div class="table">


                <form method="post" enctype="multipart/form-data">
                    Choose Your File
                    <div class="file">
                        <label class="file-label"> <input class="input" type="file" name="file"/> </label>
                    </div>

                </form>
                <input type="submit" class="button is-primary" value="Add Diagnosis Card" name="diagnosis"/>

            </div>


        </form>

    </div>
</div>