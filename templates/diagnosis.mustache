<div class="component is-info">
    <p class="title">Past Diagnosis</p>
    <div class="table is-bordered is-striped is-narrow is-hoverable">
        <table>
            <tr>
                <th>Date</th>
            </tr>
            {{#diagnosis}}
            <tr>
                <th>{{date}}</th>
            </tr>
            {{/diagnosis}}
        </table>
    </div>
    <div class="table">


        <form method="post" enctype="multipart/form-data">
            <div class="block"></div>


            <label>Add New Diagnosis Information with PDF:</label>

            <br> </br>

            <div class="table">


                <form method="post" enctype="multipart/form-data">
                    Choose Your File
                    <div class="file">
                        <label class="file-label"> <input class="input" type="file" name="file"/> <input type="submit"
                                                                                                         class="button is-primary"
                                                                                                         value="Add Diagnosis Card"
                                                                                                         name="diagnosis"/>
                        </label>
                    </div>
                </form>

            </div>





        </form>

    </div>
</div>