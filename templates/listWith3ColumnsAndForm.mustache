                <h2 class="has-text-info-light"><b>{{title}}</b></h2>
                <table class="table is-narrow is-striped is-hoverable is-bordered">
                    <tr>
                        <th>{{column1}}</th>
                        <th>{{column2}}</th>
                        <th>{{column3}}</th>
                    </tr>
                    {{#row}}
                        <tr>
                            <td>{{firstEl}}</td>
                            <td>{{secondEl}}</td>
                            <td>
                                <form method="POST">
                                    <input type="hidden" name="cancel" value="{{hiddenValue}}"> <input type="submit"
